<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_workspace_layout"
    android:layout_width="match_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/actionbar_background" >

    <LinearLayout
        android:id="@+id/title_city_manager_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/actionbar_btn"
            android:clickable="true"
            android:src="@drawable/title_city" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="48dip"
            android:layout_gravity="center"
            android:background="@color/main_activity_actionbar_background_orange_press"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_city_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/title_city_manager_layout"
        android:background="@drawable/actionbar_btn"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:text="广州天气"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/titleRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/title_location"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/actionbar_btn"
            android:src="@drawable/base_action_bar_action_city" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="48dip"
            android:layout_gravity="center"
            android:background="@color/main_activity_actionbar_background_orange_press"
            android:gravity="center" />
		 
        <FrameLayout
            android:id="@+id/title_update"
            android:layout_width="45dp"
            android:layout_height="50.0dip"
            android:layout_gravity="center"
            android:background="@drawable/actionbar_btn"
            android:clickable="true"
            android:paddingTop="2.0dip" >

            <ImageView
                android:id="@+id/title_update_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@drawable/title_update" />

            <!-- style="@style/ActionBarProgressBar" -->

            <ProgressBar
                android:id="@+id/title_update_progress"
                android:layout_width="fill_parent"
                android:layout_height="25.0dip"
                android:layout_gravity="center"
                android:indeterminateOnly="true"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>